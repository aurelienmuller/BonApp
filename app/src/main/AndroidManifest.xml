<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quentin.bonapp" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity" android:label="@string/rechercheTitleID" android:parentActivityName="com.example.quentin.bonapp.MainActivity"></activity>
        <activity android:name=".LoginActivity" android:label="@string/userTitleID" android:parentActivityName="com.example.quentin.bonapp.MainActivity"></activity>
        <activity android:name=".FavoriteActivity" android:label="@string/favorisTitleID" android:parentActivityName="com.example.quentin.bonapp.MainActivity"></activity>
        <activity android:name=".OptionsActivity" android:label="@string/parametreTitleID" android:parentActivityName="com.example.quentin.bonapp.MainActivity"></activity>
        <activity android:name=".searchRecipeActivity" android:label="@string/textRechRec" android:parentActivityName="com.example.quentin.bonapp.MainActivity"></activity>
        <activity android:name=".searchUserActivity" android:label="@string/rechercheUser" android:parentActivityName="com.example.quentin.bonapp.MainActivity"></activity>
        <activity android:name=".ListUserActivity" android:label="@string/utilisateurs" android:parentActivityName="com.example.quentin.bonapp.MainActivity"></activity>
        <activity android:name=".ListRecipeActivity" android:label="@string/recettes" android:parentActivityName="com.example.quentin.bonapp.MainActivity"></activity>
        <activity android:name=".RecipeActivity" android:label="@string/recette" android:parentActivityName="com.example.quentin.bonapp.MainActivity"></activity>
    </application>

</manifest>
